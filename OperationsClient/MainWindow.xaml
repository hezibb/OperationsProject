<Window x:Class="OperationsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Operations Client" Height="400" Width="400">
    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Field A:" />
        <TextBox x:Name="Field1Box" Margin="0,5" />

        <TextBlock Text="Operation:" />
        <ComboBox x:Name="OperationBox" Margin="0,5" />

        <TextBlock Text="Field B:" />
        <TextBox x:Name="Field2Box" Margin="0,5" />

        <Button Content="חשב" Click="OnCalculateClick" Margin="0,10" Height="30"/>

        <TextBlock x:Name="ResultText" FontWeight="Bold" Margin="0,10" TextWrapping="Wrap" />
    </StackPanel>
</Window>
